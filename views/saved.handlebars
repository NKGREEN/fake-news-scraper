<div class="articles">
{{#each articles}}

<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-2">
		<img class="articleImg img-fluid" src={{this.imgUrl}}>
	</div>

	<div class="col-md-6">
		<div class="row">
		<h4>{{this.title}}</h4>
		</div>
		<div class="row">
		{{this.excerpt}}
		</div>
		<div class="row">
		<a href=savedArticles class="btn btn-danger articleBtn" data-id={{this._id}}>Add Note</a>
		</div>
		<br>
		<br>
	</div>

	<div class="col-md-2">
	</div>
</div>

	
<br>

{{/each}}

</div>
